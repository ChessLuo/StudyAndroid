<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_java_basis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:onClick="javaBasisPage"
        android:text="Java基础"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_life"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:onClick="actPage"
        android:text="Activity 生命周期"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_java_basis" />

    <Button
        android:id="@+id/btn_launch_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:onClick="launchModePage"
        android:text="Activity 启动模式"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_life" />

    <Button
        android:id="@+id/btn_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:onClick="servicePage"
        android:text="Service服务"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_launch_mode" />

    <Button
        android:id="@+id/btn_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:onClick="broadcastPage"
        android:text="BroadcastReceiver"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_service" />

    <Button
        android:id="@+id/btn_content_provider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:onClick="contentProviderPage"
        android:text="ContentProvider"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_broadcast" />

    <Button
        android:id="@+id/btn_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:onClick="fragmentPage"
        android:text="Fragment"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_content_provider" />

    <Button
        android:id="@+id/btn_thread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:onClick="threadPage"
        android:text="多线程"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_fragment" />

    <Button
        android:id="@+id/btn_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:onClick="animationPage"
        android:text="动画"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_thread" />

    <Button
        android:id="@+id/btn_custom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:onClick="customViewPage"
        android:text="自定义View"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_animation" />

    <Button
        android:id="@+id/btn_code_analysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:onClick="codeAnalysisPage"
        android:text="开源库使用与源码分析"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_custom_view" />

</androidx.constraintlayout.widget.ConstraintLayout>